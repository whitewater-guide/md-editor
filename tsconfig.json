{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",

    "skipLibCheck": false,

    "strict": true,

    "pretty": true
  }
}